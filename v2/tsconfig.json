{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@app/*": ["./src/app/*"],
      "@blocks/*": ["./src/blocks/*"],
      "@components": ["./src/components/index.ts"],
      "@components/*": ["./src/components/*"],
      "@config/*": ["./src/config/*"],
      "@context/*": ["./src/context/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@layout/*": ["./src/components/layout/*"],
      "@lib/*": ["./src/lib/*"],
      "@modules/*": ["./src/modules/*"],
      "@sections/*": ["./src/modules/sections/*"],
      "@src/*": ["./src/*"],
      "@styles/*": ["./src/styles/*"],
      "@ui/*": ["./src/components/ui/*"],
      "@utility/*": ["./src/components/utility/*"],
      "@utils": ["./src/utils/index.ts"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest.setup.mjs",
    "jest.config.mjs",
    "eslint.config.mjs",
    "postcss.config.mjs",
    "tailwind.config.ts"
  ],
  "exclude": ["node_modules"]
}
